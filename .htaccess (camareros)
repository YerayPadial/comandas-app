<IfModule mod_rewrite.c>
  RewriteEngine On
  # Asegura que el .htaccess se aplica SOLO en /camareros
  RewriteBase /camareros/

  # Si el recurso solicitado existe como archivo o directorio, lo sirve normalmente
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Si la petición no es un archivo ni directorio, redirige a index.html de Angular
  RewriteRule ^ index.html [L]
</IfModule>

# Opcional: fuerza UTF-8
AddDefaultCharset utf-8

# Opcional: cache estática moderna
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/html "access plus 1 hour"
  ExpiresByType image/gif "access plus 1 month"
  ExpiresByType image/png "access plus 1 month"
  ExpiresByType image/jpeg "access plus 1 month"
  ExpiresByType text/css "access plus 1 week"
  ExpiresByType application/javascript "access plus 1 week"
</IfModule>